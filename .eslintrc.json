{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["prettier", "airbnb-base"],
	"plugins": ["prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"prettier/prettier": "error",
		"no-tabs": "off",
		"indent": "off",
		"comma-dangle": "off",
		"no-multi-str": "off",
		"arrow-parens": "off",
		"object-curly-newline": "warn",
		"no-console": "error",
		"max-len": ["warn", 120],
		"no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
		"class-methods-use-this": "off"
	}
}
